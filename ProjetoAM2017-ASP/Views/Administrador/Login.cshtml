@model ProjetoAM2017_ASP.Models.Administrador

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>@Html.LabelFor(model => model.Usuario) </td>
            <td>@Html.TextBoxFor(model => model.Usuario)</td>
        </tr>

        <tr>
            <td>@Html.LabelFor(model => model.Senha) </td>
            <td>@Html.PasswordFor(model => model.Senha)</td>
        </tr>

        <tr>
            <td colspan="2" style="text-align:right"><input type="submit" value="ENTRAR" /></td>
        </tr>
    </table>
}
